DELETE {
    GRAPH <https://crc1625.mdi.ruhr-uni-bochum.de/graph/workflows> {
        ?s ?p ?o.
    }
}
WHERE {
  GRAPH <https://crc1625.mdi.ruhr-uni-bochum.de/graph/workflows> {
    # Immediate neighborhood (outgoing)
    {
      <{handover_workflow_instance_iri}> ?p ?o.
      BIND(<{handover_workflow_instance_iri}> AS ?s).
    }

    # Immediate neighborhood (outgoing) of its assignments
    UNION
    {
      <{handover_workflow_instance_iri}> :hasAssignment ?s.
      ?s ?p ?o.
    }
  }
}
