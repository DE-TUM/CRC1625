@prefix sh:         <http://www.w3.org/ns/shacl#> .
@prefix prov:       <http://www.w3.org/ns/prov#> .
@prefix pmdco:      <https://w3id.org/pmd/co/> .
@prefix crc:           <https://crc1625.mdi.ruhr-uni-bochum.de/> .
@prefix project:    <https://crc1625.mdi.ruhr-uni-bochum.de/project/> .

crc:{handovers_group_shape_name}
  a sh:NodeShape ;
  sh:targetNode <{target_node}> ;

  sh:property [
    sh:path crc:assignedTo ;
    sh:in ({target_projects}) ;
    sh:message "The handover group is within an incorrect project"
  ] ;

  {restrict_number_of_activities_shape}

  {activity_shapes}

