SELECT (AVG(?n_measurements) AS ?max_measurements_in_sample_pieces) FROM <https://crc1625.mdi.ruhr-uni-bochum.de/graph> WHERE {
  SELECT ?sample_w_measurement (COUNT(?measurement) AS ?n_measurements) WHERE {
    ?sample_w_measurement a crc:MaterialsLibrary.

    ?sample_w_measurement crc:characteristic ?measurement.

    MINUS { ?measurement a crc:VolumeComposition. } # Exclude the 342 EDX compositions
    # It's a sample piece
    ?another_sample crc:composedOf ?sample_w_measurement.
  } GROUP BY ?sample_w_measurement
}